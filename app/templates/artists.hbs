<div class="rr-sidebar">
  <ul class="rr-list">
    {{#each this.model as |artist|}}
      <li class="rr-list-item">
        <LinkTo @route="artists.artist.songs" @model={{artist.slug}} class="rr-band-link">
          {{artist.name}}
          <span class="rr-pointer">
            {{fa-icon "angle-right"}}
          </span>
        </LinkTo>
      </li>
    {{/each}}
  </ul>
  <div class="rr-new-label">
    {{#if this.isAddingArtist}}
      <form class="rr-inline-form" {{on "submit" this.saveArtist}}></form>
        <Input
          @type="text"
          @value={{this.newArtistName}}
          class="rr-input"
          placeholder="New band"
        /> 
        <button
          type="submit"
          class="rr-action-button"
          disabled={{this.isAddButtonDisabled}}
        >
          Add
        </button>
        <button
          type="button"
          class="rr-cancel-icon"
          {{on "click" this.cancelAddArtist}}>
          {{fa-icon "times"}}
        </button>
      </form>
    {{else}}
      <button
        type="button"
        class="avenir bn bg-transparent near-white"
        data-test-rr="new-band-label"
        {{on "click" this.addArtist}}
      >
        {{fa-icon "plus"}}
        Add new band
      </button>
    {{/if}}
  </div>
</div>
<div class="rr-main-panel">
  {{outlet}}
</div>